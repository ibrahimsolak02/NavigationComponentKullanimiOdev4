    <fragment
        android:id="@+id/odemeFragment"
        android:name="com.ibrahimsolak.navigationcomponentkullanimiodev4.OdemeFragment"
        android:label="fragment_odeme"
        tools:layout="@layout/fragment_odeme" >
        <argument
